<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_fragments.MbSelectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="#1D2224"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp">

        <ImageButton
            android:id="@+id/create_info_close_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="Select"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/create_info_close_btn"
            app:layout_constraintStart_toEndOf="@+id/create_info_close_btn"
            app:layout_constraintTop_toTopOf="@+id/create_info_close_btn" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/create_select_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_info_close_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>